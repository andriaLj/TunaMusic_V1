<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgApp"
    android:backgroundTint="@color/bgApp"
    tools:context=".LecteurActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_button" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgApp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_action_name"
                app:title="TunaMusic"
                app:titleCentered="true"
                app:titleTextColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="377dp"
                android:layout_height="448dp"
                android:layout_marginTop="112dp"
                android:layout_marginBottom="119dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#4C6175"
                app:cardCornerRadius="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="446dp">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="135dp"
                        android:layout_height="184dp"
                        android:src="@drawable/music_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/comic_neue_bold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

                    <LinearLayout
                        android:layout_width="373dp"
                        android:layout_height="114dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="300dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#838282"
                            android:progressTint="#2196F3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_height="50dp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/previous" />

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_height="50dp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_play" />

                            <ImageView
                                android:id="@+id/imageView16"
                                android:layout_height="50dp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/next_button" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>